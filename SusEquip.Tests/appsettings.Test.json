{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "CircuitBreaker": {
    "FailureThreshold": 5,
    "TimeoutMs": 1000,
    "RecoveryTimeoutMs": 5000
  },
  "RetryPolicy": {
    "MaxAttempts": 3,
    "InitialDelayMs": 100,
    "MaxDelayMs": 5000,
    "BackoffMultiplier": 2.0
  },
  "Testing": {
    "PerformanceThresholds": {
      "MaxOperationTimeMs": 1000,
      "BulkOperationCount": 100,
      "ConcurrentOperationCount": 10,
      "StressTestDurationMs": 30000
    },
    "FailureSimulation": {
      "DefaultFailureRate": 0.3,
      "ConsecutiveFailures": 2
    }
  }
}